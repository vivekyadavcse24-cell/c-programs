#include<stdio.h>
int main()
{
  int amount, notes[]={2000,500,200,100,50,20,10,5,2,1};
int count[10]={0};
printf("enter the amount:");
scanf("%d",&amount);
for(int i=0;i<10;i++){
if (amount>=notes[i]){
count[i]=amount/notes[i];
amount-=count[i]*notes[i];
}
}
printf("total notes:\n");
for(int i=0;i<10;i++){
if(count[i]>0)
  printf("%d: %d\n",notes[i],count[i]);
}
return 0;
}

#include <stdio.h>

int main() {
    int days, start, i = 1, d = 1;

    printf("Enter number of days in month: ");
    scanf("%d", &days);

    printf("Enter starting day (1=Sun, 2=Mon, ..., 7=Sat): ");
    scanf("%d", &start);

    printf("\n Sun Mon Tue Wed Thu Fri Sat\n");

    // print initial spaces before first date
    i = 1;
    do {
        if (i < start)
            printf("    ");
        else
            break;
        i++;
    } while (i <= 7);

    // print all days
    do {
        printf("%4d", d);
        if ((d + start - 1) % 7 == 0)
            printf("\n");
d++;
    }
      while(d<=days);
return 0;
}
